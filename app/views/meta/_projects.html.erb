<% if project.description.present? && (!meta_description? || !meta_keywords?) %>
  <% description = strip_textile(project.description, project) %>
  <% meta_description(truncate_description(description)) unless meta_description? %>
  <% meta_keywords(extract_keywords(description)) unless meta_keywords? %>
<% end %>

<% settings = Setting.plugin_meta %>

<% if settings[:open_graph] %>
  <% content_for(:header_tags) do %>
    <meta property="og:type" content="product" />
    <meta property="og:title" content="<%= h project.name %>" />
    <% if meta_description? %>
      <meta property="og:description" content="<%= h meta_description %>" />
    <% end %>
    <meta property="og:url" content="<%= h url_for(:controller => 'projects', :action => 'show', :id => project, :only_path => false) %>" />
    <% unless settings[:open_graph_site].empty? %>
      <meta property="og:site_name" content="<%= h settings[:open_graph_site] %>" />
    <% end %>
  <% end %>
<% end %>

<% if settings[:twitter_cards] %>
  <% content_for(:header_tags) do %>
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="<%= h project.name %>" />
    <% if meta_description? %>
      <meta name="twitter:description" content="<%= h truncate_description(meta_description, 200) %>" />
    <% end %>
    <meta name="twitter:url" content="<%= h url_for(:controller => 'projects', :action => 'show', :id => project, :only_path => false) %>" />
    <% if settings[:twitter_project_custom_field] %>
      <% custom_field_value = project.custom_field_value(settings[:twitter_project_custom_field]) %>
      <% unless custom_field_value.empty? %>
        <meta name="twitter:site" content="<%= h twitter_username(custom_field_value) %>" />
      <% end %>
    <% else %>
      <% unless settings[:twitter_site].empty? %>
        <meta name="twitter:site" content="<%= h twitter_username(settings[:twitter_site]) %>" />
      <% end %>
    <% end %>
  <% end %>
<% end %>
